{
    "package_version": 2,
    "name": "table_tool",
    "version": "1.0.0",
    "description": "Cross-version Cocos Creator extension with Vue Data Editor",
    "author": "oldP",
    "editor": ">=3.0.0",
    "main": "./dist/v3/main.js",
    "scripts": {
        "build": "npx tsc"
    },
    "devDependencies": {
        "@cocos/creator-types": "^3.8.0",
        "@types/node": "^18.17.1",
        "typescript": "^5.0.0"
    },
    "contributions": {
        "menu": [
            {
                "path": "i18n:table_tool.develop",
                "label": "i18n:table_tool.dataEditor",
                "message": "open-panel"
            }
        ],
        "messages": {
            "open-panel": {
                "methods": ["openDataEditor"]
            },
            "getProjectPath": {
                "methods": ["getProjectPath"]
            },
            "readFile": {
                "methods": ["readFile"]
            },
            "readBinaryFile": {
                "methods": ["readBinaryFile"]
            },
            "writeBinaryFile": {
                "methods": ["writeBinaryFile"]
            },
            "selectFile": {
                "methods": ["selectFile"]
            },
            "selectDirectory": {
                "methods": ["selectDirectory"]
            },
            "selectSavePath": {
                "methods": ["selectSavePath"]
            },
            "exists": {
                "methods": ["exists"]
            },
            "createDirectory": {
                "methods": ["createDirectory"]
            }
        }
    },
    "panels": {
        "default": {
            "title": "Table Tool - 数据编辑器",
            "type": "dockable",
            "main": "./dist/v3/panels/default/index.js",
            "size": {
                "min-width": 600,
                "min-height": 400,
                "width": 900,
                "height": 600
            }
        }
    },
    "asset-db": {
        "mount": {
            "path": "./assets"
        }
    }
}