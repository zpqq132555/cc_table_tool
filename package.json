{
    "package_version": 2,
    "name": "table_tool",
    "version": "1.0.0",
    "description": "Cross-version Cocos Creator extension",
    "author": "oldP",
    "editor": ">=3.0.0",
    "main": "./dist/v3/main.js",
    "scripts": {
        "preinstall": "node ./scripts/install.js",
        "build": "npx tsc",
        "build:v2": "npx tsc -p tsconfig.v2.json",
        "build:v3": "npx tsc -p tsconfig.v3.json",
        "watch": "npx tsc -w",
        "dev:editor": "npm run dev --prefix src/panels/vue-editor",
        "build:editor": "npm run build:cocos --prefix src/panels/vue-editor",
        "dev:electron": "npm start --prefix electron -- --dev",
        "build:exe": "npm run build --prefix electron",
        "install:editor": "npm install --prefix src/panels/vue-editor",
        "install:electron": "npm install --prefix electron",
        "install:all": "npm install && npm run install:editor && npm run install:electron"
    },
    "devDependencies": {
        "@types/node": "^18.17.1",
        "typescript": "^5.0.0",
        "@cocos/creator-types": "^3.8.0"
    },
    "panels": {
        "default": {
            "title": "Extensions Tools",
            "type": "dockable",
            "main": "./dist/v3/panels/default/index.js",
            "size": {
                "min-width": 400,
                "min-height": 300,
                "width": 600,
                "height": 400
            }
        }
    },
    "asset-db": {
        "mount": {
            "path": "./assets"
        }
    }
}